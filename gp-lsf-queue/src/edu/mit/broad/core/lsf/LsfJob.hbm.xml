<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="edu.mit.broad.core.lsf"> 
  <class name="LsfJob" table="JOB_LSF"> 
    <id name="internalJobId" type="long">
      <column name="INTERNAL_JOB_ID" not-null="true" unique="true" precision="22" scale="0"/>
      <!--  note, this could be an FK to ANALYSIS_JOB.JOB_NO  -->
      <generator class="assigned"/>
    </id>    
    <property name="workingDirectory" type="string" column="WORKING_DIRECTORY" length="512" />
    <property name="inputFilename" type="string" column="INPUT_FILENAME" length="512" />
    <property name="outputFilename" type="string" column="OUTPUT_FILENAME" length="512" />
    <property name="errorFileName" type="string" column="ERROR_FILENAME" length="512" />
    <property name="name" type="string" column="JOB_NAME" length="512" />
    <property name="queue" type="string" column="QUEUE" length="512" />
    <property name="project" type="string" column="PROJECT" length="512" />
    <property name="status" type="string" column="LSF_JOB_STATUS" length="512" />
    <property name="lsfJobId" type="string" column="LSF_JOB_ID" length="512" />
    <property name="standardOutput" type="string"> 
      <column name="STANDARD_OUTPUT" sql-type="LONGVARCHAR"/>
    </property>
    <property name="errorOutput" type="string"> 
      <column name="ERROR_OUTPUT" sql-type="LONGVARCHAR"/>
    </property>
    <property name="completionListenerName" type="string" column="LISTENER_CLASS_NAME" length="256" />
    <property name="gapServerId" type="string" column="GAP_SERVER_ID" length="256" />
    <property name="command" type="string"> 
      <column name="COMMAND" sql-type="LONGVARCHAR"/>
    </property>
    <property name="updatedDate" type="date" column="UPDATED_DATE" />    
  </class>
  
</hibernate-mapping>
