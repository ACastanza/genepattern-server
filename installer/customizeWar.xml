<?xml version="1.0" encoding="UTF-8"?>
<project default="customizeWar" name="customizeWar">


<target name="unzip">
	<unzip src="./gp.war" dest="./gp" overwrite="true" />
	
</target>

<target name="customizeWar" depends="confirmLocalValues, unzip">
	<property file="gpinstall/resources/build.properties"/>


    	<replace file="gp/WEB-INF/classes/log4j.properties">
 		<replacefilter 
    			token="log4j.appender.R.File=logs/" 
    			value="log4j.appender.R.File=${INSTALL_DIR}/logs/"/>
	</replace>

	<copy file="gp/WEB-INF/classes/log4j.properties" todir="gpinstall/resources"/>

    	<replace file="gpinstall/resources/genepattern.properties">
 		<replacefilter 
    			token="$purgeTime$" 
    			value="${PURGE_TIME}"/>
 		<replacefilter 
    			token="$purgeJobsAfter$" 
    			value="${PURGE_DELAY_DAYS}"/>
		<replacefilter 
    			token="$webmaster$" 
    			value="${WEBMASTER}"/>
		<replacefilter 
    			token="$GENEPATTERN_PORT$" 
    			value="${GENEPATTERN_PORT}"/>
		<replacefilter 
    			token="$HSQL_port$" 
    			value="${HSQL_PORT}"/>
		<replacefilter 
    			token="$PERL$" 
    			value="${PERL}"/>
		<replacefilter 
    			token="$JAVA$" 
    			value="${JAVA}"/>
		<replacefilter 
    			token="$R$" 
    			value="${R}"/>
		<replacefilter 
    			token="$LSID_AUTHORITY$" 
    			value="${LSID_AUTHORITY}"/>
		<replacefilter 
    			token="$GENEPATTERN_VERSION$" 
    			value="${version.major}.${version.minor}"/>
		<replacefilter 
    			token="$buildtag$" 
    			value="${build.tag}"/>


		<replacefilter 
    			token="-database ../resources/GenePatternDB" 
    			value="-database ${INSTALL_DIR}/resources/GenePatternDB"/>
		
		<replacefilter 
    			token="HSQL.classPath=webapps/gp/WEB-INF/lib/hsqldb.jar" 
    			value="HSQL.classPath=${INSTALL_DIR}/WEB-INF/lib/hsqldb.jar"/>
		<replacefilter 
    			token="DB.schema=../resources/analysis_hypersonic.sql" 
    			value="DB.schema=./analysis_hypersonic.sql"/>
		<replacefilter 
    			token="resources=../resources" 
    			value="resources=${INSTALL_DIR}/resources"/>
		<replacefilter 
    			token="index=../index" 
    			value="index=${INSTALL_DIR}/index"/>
		<replacefilter 
    			token="tasklib=../tasklib" 
    			value="tasklib=${INSTALL_DIR}/tasklib"/>
		<replacefilter 
    			token="jobs=temp" 
    			value="jobs=${INSTALL_DIR}/temp"/>
		<replacefilter 
    			token="tomcat=../Tomcat" 
    			value=""/>
		<replacefilter 
    			token="tomcatCommonLib=$USER_INSTALL_DIR$/Tomcat/common/lib" 
    			value="tomcatCommonLib=${INSTALL_DIR}/WEB-INF/lib"/>
		<replacefilter 
    			token="webappDir=$USER_INSTALL_DIR$/Tomcat/webapps/gp" 
    			value="webappDir=${INSTALL_DIR}/"/>

	</replace>

	<echo append="true" file="gpinstall/resources/genepattern.properties">
fullyQualifiedHostName=${HOST}.${DOMAIN}
	</echo>
	<antcall target="addSmtpServer"/>
	
    	

    <replace file="gp/WEB-INF/web.xml">
		<replacefilter 
    			token="../resources" 
    			value="${INSTALL_DIR}/resources"/>
		<replacefilter 
    			token="./temp" 
    			value="${INSTALL_DIR}/iotemp"/>
		<replacefilter 
    			token="webapps/gp/WEB-INF/classes/log4j.properties"
			value="${INSTALL_DIR}/resources/log4j.properties" />

	</replace>

 	<replace file="gp/WEB-INF/server-config.wsdd">
		<replacefilter 
    			token="../resources" 
    			value="${INSTALL_DIR}/resources"/>
	</replace>

	<copy file="gpinstall/resources/genepattern.properties" tofile="gpinstall/resources/genepattern.properties.default"/>



	
  <condition property="R.defined">
    <available file="${R}/library" type="dir"/>
  </condition>
  	<replace file="GenePattern/R/genepattern.properties" >
 		
		<replacefilter 
    			token="$GENEPATTERN_PORT$" 
    			value="${GENEPATTERN_PORT}"/>
		<replacefilter 
    			token="$HOST_NAME$" 
    			value="${HOST}"/>
		<replacefilter 
    			token="$GENEPATTERN_VERSION$" 
    			value="${version.major}.${version.minor}"/>

	</replace>

	<copy todir="${R}/library/GenePattern">
		<fileset dir="GenePattern"/>
	</copy>
	<ant antfile="./runtimeBuild.xml" target="post-install">
		<property name="output.dir" value="gp"/>
	</ant>



	<war destfile="gp.war.customized" 
		basedir="gp"
		webxml="gp/WEB-INF/web.xml">
	</war>


</target>

<target name="addSmtpServer" if="SMTP.SERVER">
	<echo append="true" file="gpinstall/resources/genepattern.properties">
smtp.server=${SMTP.SERVER}
	</echo>

</target>

<target name="getLocalValues">
<input
    message="Host name: "
    addproperty="HOST" />
<input
    message="Domain: "
    addproperty="DOMAIN" />

<input
    message="webmaster username (default=${user.name}@${DOMAIN}): "
    addproperty="WEBMASTER" 
	defaultvalue="${user.name}@${DOMAIN}" />

<input
    message="webserver port (no default): "
    addproperty="GENEPATTERN_PORT"  />

<input
    message="HSQL port (default=9001): "
    addproperty="HSQL_PORT"
    defaultvalue="9001"  />

<input
    message="JAVA_HOME (default=${java.home}):"
    addproperty="JAVA"
	defaultvalue="${java.home}"  />

<input
    message="R directory (no default): "
    addproperty="R"  />

<input
    message="Perl directory (no default): "
    addproperty="PERL"  />

<input
    message="# days to hold data before purging (default=7): "
    addproperty="PURGE_DELAY_DAYS"
	defaultvalue="7"  />

<input
    message="time of day to run job purge (default=23:00): "
    addproperty="PURGE_TIME" 
	defaultvalue="23:00" />

<input
    message="LSID Authority (default=${GENEPATTERN_PORT}.${user.name}.${HOST}.${DOMAIN}): "
    addproperty="LSID_AUTHORITY"  
	defaultvalue="${GENEPATTERN_PORT}.${user.name}.${HOST}.${DOMAIN}" />

<input
    message="Installation directory (no default): "
    addproperty="INSTALL_DIR"  />

<input
	message="SMTP Mail server (default=autodetect at runtime)"
	addproperty="SMTP.SERVER.STR" />

<condition property="SMTP.SERVER" value="${SMTP.SERVER.STR}">
	<not>
		<equals arg1="${SMTP.SERVER.STR}" arg2="" trim="true"/>
	</not>
	
</condition>


</target>

<target name="echoLocalValues" depends="getLocalValues" >
	<echo>========================================= 
Customized values:


Host=${HOST}.${DOMAIN}
WebMaster= ${WEBMASTER}
Webserver Port= ${GENEPATTERN_PORT}
HSQL port= ${HSQL_PORT}
Java= ${JAVA}
R= ${R}
Perl= ${PERL}
Job Purge= at ${PURGE_TIME} after ${PURGE_DELAY_DAYS} days
LSID Authority= ${LSID_AUTHORITY}
Installation directory= ${INSTALL_DIR}
SMTP Server=${SMTP.SERVER}

========================================= 
</echo>

</target>


<target name="confirmLocalValues" depends="echoLocalValues" >

 <input
    message="Accept these values and continue? "
    validargs="y,n"
    addproperty="do.delete"
  />
  <condition property="do.abort">
    <equals arg1="n" arg2="${do.delete}"/>
  </condition>
  <fail if="do.abort">Build aborted by user.</fail>
</target>



</project>