<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.genepattern.server.domain">
 <class name="UploadFile" optimistic-lock="none" table="UPLOAD_FILE">
  <id name="path" type="string">
   <column name="PATH" not-null="true" unique="true"/>
   <generator class="assigned"/>
  </id>
  
  <property name="userId" column="USER_ID" />
  <property name="name" column="NAME" />
  <property name="extension" column="EXTENSION" />
  <property name="kind" column="KIND" />
  <property name="fileLength" column="FILE_LENGTH" />
  <property name="lastModified" type="timestamp" column="LAST_MODIFIED"/>

 </class>
 
 <query name="getUploadFilesForUser">
    from  UploadFile as file where
      (file.userId = :userId)
    order by file.lastModified desc
  </query>
 
</hibernate-mapping>
